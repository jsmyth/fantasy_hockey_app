!!! XML
!!!
%html{ :lang => "en", 'xml:lang' => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{'http-equiv' => "Content-type", :content => "text/html;charset=UTF-8"}
    %title= "Fantasy Hockey App - #{Date.today.year} #{@current_league.name} Draft"
    = stylesheet_link_tag 'draft.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag  "jquery/jquery.min.js", "jquery/jquery.epiclock.min.js", "jquery/draft_timer.js"
  %body
    #container
      = yield
