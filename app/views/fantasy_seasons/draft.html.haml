#content
  %table.requests
    - @available_players.each do |p|
      %tr
        %td PIC
        %td=h p.positions.collect{|pos| pos.abbreviation}.join('/')
        %td=h p.name
        %td=h p.nhl_team.abbreviation
        %td= link_to("DRAFT", {:controller => 'roster_assignments', :action => 'create', :id => p.id}, :confirm => "Really? Are you serious? One last chance to redeem yourself (push cancel)", :method => :post)
