#content
  %table#table_example
    %tbody
      - @available_players.each do |p|
        %tr.row
          %td= image_tag p.photo.url(:thumb)
          %td= p.positions.collect{|pos| pos.abbreviation}.join('/')
          %td= link_to(image_tag("icons/add_to_roster.png"), {:controller => 'roster_assignments', :action => 'create', :id => p.id, :draft_player => true}, :confirm => "Are you sure? This will draft #{p.name} onto CHANGEME!", :method => :post)
          %td= p.name
          %td= image_tag p.nhl_team.photo.url(:thumb), :class => 'small-photo'

#sidebar
  %p
    #epiClock
  %p
    #liveSearch
  %p
    #running-picks-list
      - if @last_two_draft_picks
        - @last_two_draft_picks.each do |draft_pick|
          .previous-pick
            = draft_pick.fantasy_team.name
      .current-pick= "#{@current_draft_pick.fantasy_team.name}"
      - @next_five_draft_picks.each do |draft_pick|
        .upcoming-pick
          = draft_pick.fantasy_team.name