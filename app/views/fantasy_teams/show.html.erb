<% title @fantasy_team.name %>

<p>
  <strong>League:</strong>
  <%=h @fantasy_team.league.name %>
  <strong>User:</strong>
  <%=h @fantasy_team.user.name %>
</p>

<table>
  <tr>
    <th>NHL Players</th>
  </tr>
<% @fantasy_team.nhl_players.each do |p| %>
  <tr>
    <td><%= p.name%></td>
  </tr>
<% end %>
</table>

<table>
	<tr>
		<th>NHL Goalie</th>
	</tr>
</table>

<table>
  <tr>
    <th>Minor Leaguers</th>
  </tr>
<% @fantasy_team.minor_leaguers.each do |m| %>
  <tr>
    <td><%= m.name%></td>
  </tr>
<% end %>
</table>

<p>
  <%= link_to "Edit", edit_fantasy_team_path(@fantasy_team) %> |
  <%= link_to "Destroy", @fantasy_team, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", fantasy_teams_path %>
</p>
